server {
    server_name lukasheumos.com www.lukasheumos.com.com;

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/zeth/lukas_heumos_website/lukas_heumos_website.sock;
    }
}

server {
    if ($host = lukasheumos.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = www.lukasheumos.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name www.lukasheumos.com lukasheumos.com;
    return 301 https://$host$request_uri;
}
